<p id="notice"><%= notice %></p>

<h3><%= @tagTitle %> Events</h3>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Tag</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= image_tag(event.imageURL) %></td>
        <td><%= event.title %></td>
        <td><div><%= event.description %></div></td>
        <td><%= event.date %></td>
        <td><%= event.tag %></td>
        <td><%= event.latitude %></td>
        <td><%= event.longitude %></td>
        <td><%= link_to 'Show', event, class: 'btn-link' %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: 'btn-link' %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path, class: 'btn-link' %>
