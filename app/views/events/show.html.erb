<p id="notice"><%= notice %></p>

<div class='container'>
  <div class='row'>
    <div class='col-xs-12'>
      <h2><%= @event.title %></h2>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-6'>
      <strong>Description:</strong>
      <%= @event.description %>
    </div>
    <div class='col-xs-6'>
      <div class='row'>
        <div class='col-xs-12'>
          <%= image_tag(@event.imageURL) %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <strong>Tag:</strong>
          <%= @event.tag %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <strong>Date:</strong>
          <%= @event.date %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <strong>Longitude:</strong>
          <%= @event.longitude %>
        </div>
      </div>
      <div class='row'>
        <div class='col-xs-12'>
          <strong>Latitude:</strong>
          <%= @event.latitude %>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-12'>
      <%= link_to 'Edit', edit_event_path(@event), class: 'btn-link' %> |
      <%= link_to 'Back', root_path, class: 'btn-link' %>
    </div>
  </div>
</div>


